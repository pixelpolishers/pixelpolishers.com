<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="PixPolForum\Entity\Board" table="forum_board">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="position" type="integer" column="position" />
        <field name="name" type="string" column="name" />
        <field name="description" type="text" column="description" />

        <many-to-one field="category" target-entity="PixPolForum\Entity\Category">
            <join-column name="category_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <one-to-many field="topics" target-entity="PixPolForum\Entity\Topic" mapped-by="board">
            <order-by>
                <order-by-field name="createdOn" direction="DESC" />
            </order-by>
        </one-to-many>
    </entity>
</doctrine-mapping>
