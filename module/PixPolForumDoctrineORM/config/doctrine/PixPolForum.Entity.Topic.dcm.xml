<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="PixPolForum\Entity\Topic" table="forum_topic">
        <id name="id" type="bigint" column="id">
            <generator strategy="IDENTITY"/>
        </id>

        <field name="locked" type="boolean" column="locked" />
        <field name="sticky" type="boolean" column="sticky" />
        <field name="title" type="string" column="title" />

        <field name="postCount" type="bigint" column="postCount" />

        <many-to-one field="lastPost" target-entity="PixPolForum\Entity\Post">
            <join-column name="lastPost" referenced-column-name="id" on-delete="NO ACTION" nullable="true" />
        </many-to-one>

        <many-to-one field="board" target-entity="PixPolForum\Entity\Board">
            <join-column name="board_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <one-to-many target-entity="PixPolForum\Entity\Post" mapped-by="topic" field="posts" />

        <many-to-one field="createdBy" target-entity="PixPolUser\Entity\User">
            <join-column name="createdBy" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <field name="createdOn" type="datetime" column="createdOn" />

        <many-to-many field="tags" target-entity="PixPolTag\Entity\Tag">
            <join-table name="forum_topic_tag">
                <join-columns>
                    <join-column name="topic_id" referenced-column-name="id" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="tag_id" referenced-column-name="id" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
